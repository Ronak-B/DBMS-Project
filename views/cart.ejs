<% include partials/header.ejs %>
<div class="jumbotron">
  <i class="fas fa-shopping-cart jumbotron-icon" style="font-size:8rem;"></i>
  <h1 class="display-4" style="display:inline;">My Cart</h1>
</div>
<div class="container" style="margin-top:40px;">
    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Song</th>
      <th scope="col">Price</th>
      <th scope="col">Date added</th>
    </tr>
  </thead>
  <tbody>
      <% results.forEach(function(song,i) { %>
    <tr>
      <th scope="row"><%=i+1%></th>
      <td><%=song.title%>  <form style="display:inline;" action="/cart/<%=song.songID%>?_method=PUT" method="POST"></span><button type="submit" class="btn btn-link">remove</button></form></td>
      <td><%=song.price%></td>
      <% var date=song.addDate.toString().slice(0,15);%>
      <td><%=date%></td>
    </tr>
    <% });%>
    <tr>
      <th></th>
      <td></td>
      <td><p style="font-weight:500;">Total: <%= price%> $</p></td>
    </tr>
  </tbody>
</table>
<%if(price) {%>
  <a class="btn btn-success btn-lg text-center" href="/checkout" style="margin-left:40%;">Proceed to checkout</a>
<% }%>

</div>
<% include partials/footer.ejs %>